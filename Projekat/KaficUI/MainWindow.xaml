<Window x:Class="KaficUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:KaficUI.ViewModel"
        xmlns:local="clr-namespace:KaficUI"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:KaficUI.View"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:CenovnikViewModel}">
            <views:CenovnikView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:GostViewModel}">
            <views:GostView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu>
                <MenuItem Header="Cenovnik" Command="{Binding NavCommand}" CommandParameter="cenovnik"/>
                <MenuItem Header="Gost" Command="{Binding NavCommand}" CommandParameter="gost"/>
            </Menu>
        </DockPanel>
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>
